{
  "type": "object",
  "properties": {
    "ingestion": {
      "description": "Ingestion Framework Configuration Properties",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "cpus": {
          "description": "CPU shares to allocate to each Ingestion instance.",
          "type": "number",
          "minimum": 0.0,
          "default": 1.0
        },
        "instances": {
          "description": "Number of Ingestion instances to run.",
          "type": "integer",
          "minimum": 0,
          "default": 1
        },
        "framework-name": {
          "description": "The framework name (default = Ingestion)",
          "type": "string",
          "default": "ingestion"
        },
        "hostname": {
          "description": "The advertised hostname stored in ZooKeeper so another standby host can redirect to this elected leader (default = localhost)",
          "type": "string",
          "default": "$HOST"
        },

        "mem": {
          "description": "Memory (MB) to allocate to each Ingestion instance.",
          "type": "number",
          "minimum": 512.0,
          "default": 1024.0
        }
      },
      "required": [
        "cpus",
        "framework-name",
        "hostname",
        "instances",
        "mem"
      ]
    }
  }
}