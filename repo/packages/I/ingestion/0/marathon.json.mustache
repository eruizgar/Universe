{
    "id": "{{ingestion.framework-name}}",
    "cpus": {{ingestion.cpus}},
    "mem": {{ingestion.mem}},
    "instances": {{ingestion.instances}},
    "env": {
        "APPLICATION_WEB_PROXY_BASE": "/service/ingestion"
    },
    "container": {
        "type": "DOCKER",
        "docker": {
        "image": "{{resource.assets.container.docker.ingestion}}",
        "network": "HOST"
    }
    },
    "healthChecks": [
        {
            "path": "/",
            "portIndex": 1,
            "protocol": "HTTP",
            "gracePeriodSeconds": 5,
            "intervalSeconds": 60,
            "timeoutSeconds": 10,
            "maxConsecutiveFailures": 3
        }
    ],
    "labels": {
        "DCOS_PACKAGE_FRAMEWORK_NAME": "{{ingestion.framework-name}}"
    }
}