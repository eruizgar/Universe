{
    "id": "{{ingestion.framework-name}}",
    "cpus": {{ingestion.cpus}},
    "mem": {{ingestion.mem}},
    "instances": {{ingestion.instances}},
    "env": {
        "APPLICATION_WEB_PROXY_BASE": "/service/ingestion"
    },
    "healthChecks": [
        {
            "gracePeriodSeconds": 120,
            "intervalSeconds": 30,
            "maxConsecutiveFailures": 0,
            "path": "/",
            "portIndex": 0,
            "protocol": "HTTP",
            "timeoutSeconds": 5
        }
    ],
    "container": {
        "type": "DOCKER",
        "docker": {
        "image": "{{resource.assets.container.docker.ingestion}}",
        "network": "HOST"
    }
    },
    "labels": {
        "DCOS_PACKAGE_FRAMEWORK_NAME": "{{ingestion.framework-name}}"
    }
}